---
const base = import.meta.env.BASE_URL;

const contacts = [
  {
    img: `${base}/img/phone.png`,
    method: "Call",
    number: "021.123.145.14",
    button: "Call Now",
  },
  {
    img: `${base}/img/chat.png`,
    method: "Chat",
    number: "021.123.145.14",
    button: "Chat Now",
  },
  {
    img: `${base}/img/call.png`,
    method: "Video Call",
    number: "021.123.145.14",
    button: "Video Call Now",
  },
  {
    img: `${base}/img/mail.png`,
    method: "Message",
    number: "021.123.145.14",
    button: "Message Now",
  },
];
---

<section id="contact" class="w-full py-24 px-6 md:px-24 bg-white">
  <div class="flex flex-col md:flex-row w-full gap-12">
    <!-- InformaciÃ³n -->
    <div class="flex-1">
      <h2
        class="text-[#112778] font-extrabold text-2xl md:text-3xl leading-snug tracking-wide mb-4"
      >
        Emergency Contact
      </h2>
      <p class="text-gray-700 font-semibold leading-relaxed max-w-lg mb-12">
        Contact one of the contacts below if your family feel unwell and have
        similar symptoms such as Covid-19, make sure you also take care of
        yourself before reporting to us:
      </p>

      <div class="flex flex-wrap gap-6">
        {
          contacts.map((c) => (
            <div class="w-[200px] p-5 rounded-md bg-white shadow-sm hover:shadow-lg transition-shadow duration-500 cursor-pointer">
              <div class="flex items-center mb-4">
                <img src={c.img} alt={c.method} class="w-9 rounded-md" />
                <p class="ml-4 font-bold text-[#112778]">
                  {c.method} <br />
                  <span class="text-gray-600 text-xs">{c.number}</span>
                </p>
              </div>
              <a
                href="#"
                class="block bg-purple-200 hover:bg-[#112778] hover:text-white text-[#112778] text-center font-semibold py-3 rounded-md shadow-md transition-colors duration-700"
              >
                {c.button}
              </a>
            </div>
          ))
        }
      </div>
    </div>

    <!-- Imagen -->
    <div class="flex-1 flex justify-center md:justify-end">
      <img
        src={`${base}/img/img2.jpg`}
        alt="Enfermero"
        class="w-4/5 h-[600px] object-cover rounded-md"
      />
    </div>
  </div>
</section>
