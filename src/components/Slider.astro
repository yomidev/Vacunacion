---
const base = import.meta.env.BASE_URL;

const images = [
  { src: `${base}/img/astrazeneca.png`, alt: "AstraZeneca" },
  { src: `${base}/img/sinovac.png`, alt: "Sinovac" },
  { src: `${base}/img/pfizer.png`, alt: "Pfizer" },
  { src: `${base}/img/moderna.png`, alt: "Moderna" },
];
---

<section class="w-full py-12 bg-white">
  <div class="flex justify-around items-center flex-wrap px-6 md:px-16 gap-6">
    {
      images.map((image) => (
        <img
          src={image.src}
          alt={image.alt}
          class="w-1/5 min-w-[120px] opacity-20 hover:opacity-100 transition duration-300"
        />
      ))
    }
  </div>
</section>
